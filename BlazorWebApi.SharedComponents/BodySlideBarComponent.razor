<script>

        function scrollSlider(direction) {
        const sliderContainer = document.querySelector('.slider-container');
        const scrollAmount = 100; // میزان اسکرول به پیکسل

        if (direction === 1) {
            sliderContainer.scrollLeft += scrollAmount;
        } else if (direction === -1) {
            sliderContainer.scrollLeft -= scrollAmount;
        }
    }

</script>
