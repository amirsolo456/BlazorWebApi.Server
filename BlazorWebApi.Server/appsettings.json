{

  "JwtSettings": {
    "SecretKey": "aVeryLongAndSecureSecretKeyThatIsAtLeast32Bytes", // این کلید باید محرمانه باشد
    "Issuer": "WebApi_Service", // نام صادرکننده توکن
    "Audience": "WebClient-app", // مخاطبین توکن
    "ExpiryMinutes": 60 // مدت زمان انقضا (دقیقه)
  },

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=DotNetDb;Integrated Security=True;Trust Server Certificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"


}
